{% extends 'pagesApp.html.twig' %}

{% block content %}

	<div class="container py-5">
		<div class="mb-4 d-flex flex-row justify-content-between">
			<h1>Categorias</h1>
			<div>
				<a href="/categorias/cadastrar" class="btn btn-primary"><i class="bi bi-plus"></i>Nova categoria</a>
			</div>
		</div>

		<div class="w-90 mt-2">
			{% include "mensagens.html.twig" %}
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th scope="col">Id</th>
						<th scope="col">Nome</th>
						<th scope="col-1">Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for categoria in categorias %}
						<tr>
							<th scope="row">{{ categoria.id }}</th>
							<td>{{ categoria.nome }}</td>
							<td class="col-1 container">
								<a href="categoria/editar/{{ categoria.id }}" class="btn btn-secondary btn-sm">
									<i class="bi bi-pencil"></i>
								</a>
								<a href="{{ path('excluir_categoria', {id: categoria.id })}}" class="btn btn-danger btn-sm">
									<i class="bi bi-x"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>

			</table>
		</div>
	</div>
{% endblock %}
